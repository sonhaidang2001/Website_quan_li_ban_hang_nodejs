{{> header}}

{{#each user}}
<div class="container mt-2">
    <h1 class="text-center">Cập Nhật Admin</h1>
<form method="POST" action="/edit/{{this._id}}">
  <div class="form-group">
    <label for="exampleInputEmail1">Họ và Tên</label>
    <input type="username" name="username" value="{{this.username}}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Mật khẩu</label>
    <input type="text" name="password" value="{{this.password}}" class="form-control" id="exampleInputPassword1" placeholder="Enter password">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Email</label>
    <input type="email" name="email" value="{{this.email}}" class="form-control" id="exampleInputPassword1" placeholder="Enter @gmail.com">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Địa chỉ</label>
    <input type="text" name="address" value="{{this.address}}" class="form-control" id="exampleInputPassword1" placeholder="Enter address">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Số điện thoại</label>
    <input type="phone" name="phone" value="{{this.phone}}" class="form-control" id="exampleInputPassword1" placeholder="Enter phone">
  </div>
  
  <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>
</div>
 {{/each}}
